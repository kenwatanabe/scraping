<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Release date</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.artist %></td>
        <td><%= product.release_date %></td>
        <% if product.amazon_api_datum %>
          <td><img border="0" src=<%= product.amazon_api_datum.try(:main_image_url) %> width="128" height="128" alt="イラスト1"></td>
        <% else %>
          <td><%= link_to t(".new_image"), amazon_api_data_path %></td>
        <% end %>

        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

